class Solution {
    public int lengthOfLIS(int[] nums) {
        if(nums==null || nums.length==0) return 0;

   
      List<Integer> tails =new ArrayList<>();

        for(int num: nums){
        int left=0, right =tails.size();

        while(left< right){
            int mid= left+(right-left)/2;
            if(tails.get(mid)<num){
                left=mid+1;
            }else{
                right=mid;
            }
        }
        if(left==tails.size()){
            tails.add(num);
        }else{
            tails.set(left,num);
        }
        }
        return tails.size();
    }
}
